{
  "name": "ML-Foundetions",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "vscode",
  "forwardPorts": [8888],
  "postCreateCommand": "git config --global user.email \"nikhil.pagote@gmail.com\" && git config --global user.name \"Nikhil Pagote\" && jupyter notebook --ip=0.0.0.0 --port=8888 --no-browser --NotebookApp.token=''",

  "customizations": {
    "vscode": {
      "extensions": [
        "Blackboxapp.blackbox",
        "Blackboxapp.blackboxagent"
      ],
      "settings": {
        "python.linting.enabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "editor.rulers": [80, 100],
        "editor.renderWhitespace": "all",
        "files.trimTrailingWhitespace": true
      }
    }
  }
}
